<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:paddingBottom="10dip">


     <RelativeLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
         android:background="#b8f9f5"
         android:paddingTop="@dimen/fab_margin">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/doct_banner_image"
            android:layout_alignParentBottom="true"/>

        <TextView
            android:id="@+id/myImageViewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="Dr. William John"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"/>
     </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider"
        android:orientation="vertical"
        android:paddingTop="@dimen/fab_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cardiologist : "
                android:layout_alignParentLeft="true"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/fab_margin"
                android:id="@+id/txt_catergory_title"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Cardiologist"
            android:id="@+id/txt_category"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/txt_catergory_title"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification : "
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/fab_margin"
                android:id="@+id/txt_qualification_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_qualification"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/txt_qualification_title"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timings : "
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/fab_margin"
                android:id="@+id/txt_timings_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_timings"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/txt_timings_title"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phone number : "
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/fab_margin"
                android:id="@+id/txt_phone_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Cardiologist"
                android:id="@+id/txt_phone"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/txt_phone_title"/>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email id : "
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:textColor="#000000"
                android:layout_marginLeft="@dimen/fab_margin"
                android:id="@+id/txt_email_title"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Cardiologist"
                android:id="@+id/txt_email"
                android:textColor="#000000"
                android:layout_toRightOf="@+id/txt_email_title"/>

        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/bookbutton"
            android:theme="@style/AppTheme.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textColor="@android:color/white"
            android:background="@drawable/gradient"
            android:text="Book"/>


    </LinearLayout>
</RelativeLayout>
