<resources>
    <!-- Base application theme. -->
    <style name="myTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ff80ab</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#00E5FF</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>





    <style name="myTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">#ff80ab</item>
        <item name="colorPrimaryDark">#ff6e9f</item>
        <item name="colorAccent">#00E5FF</item>
        <item name="android:actionBarStyle">@style/myTheme.ActionBar</item>
        <item name="android:actionMenuTextColor">#00E5FF</item>
    </style>




    <style name="myTheme.ActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:background">#c6c4c4</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
    </style>
    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00E5FF</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Borderless">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>
</resources>
